<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="2dp">

    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_toLeftOf="@+id/imageview_edit"
        android:layout_toStartOf="@+id/imageview_edit"
        />

    <ImageView
        android:id="@+id/imageview_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_edit"
        android:padding="8dp"
        android:layout_toLeftOf="@+id/imageview_delete"
        android:layout_toStartOf="@+id/imageview_delete"
        />

    <ImageView
        android:id="@+id/imageview_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_delete"
        android:padding="8dp"
        android:layout_toLeftOf="@+id/imageview_move"
        android:layout_toStartOf="@+id/imageview_move"
        />

    <ImageView
        android:id="@+id/imageview_move"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_move"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>