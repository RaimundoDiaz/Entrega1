<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/textview_todo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/imageview_menu"
        android:layout_toLeftOf="@+id/imageview_menu"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/imageview_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@+id/imageview_move2"
        android:layout_toStartOf="@+id/imageview_move2"
        android:src="@drawable/ic_vertical_dot"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/imageview_move2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_move"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>